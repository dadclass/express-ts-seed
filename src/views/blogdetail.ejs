<%- include('includes/header.ejs') %>

<div class="w3-container style="max-width:1400px;max-height:700px">

  <!-- Body header -->
  <header class="w3-container w3-center w3-padding-8 w3-teal" "> 
    <h1><b><%= blog.title %></b></h1>
  </header>

  <!-- Navigator bar -->
  <%- include('includes/nav.ejs') %>

  <div class="w3-center">
      <p class="w3-tag w3-orange w3-round w3-center">
        <%= blog.getCreatedOnFormatted() %>
      </p>      
  </div>

  <!-- Body main -->
  <div class="w3-container">
    <div class="w3-cell-row w3-margin-bottom">
      <div class="w3-third w3-cell">
          <img src="<%= blog.imageUrls[0] %>" alt="Movie Poster" style="width:100%;min-height:200px">  
      </div>
      <div class="w3-twothird w3-cell w3-border w3-pale-blue">
          <h4 class="w3-left-align"><%= blog.content %></h4>
      </div>  
    </div>
  </div>

  <!-- Body footer -->
  <%- include('includes/footer.ejs') %>
